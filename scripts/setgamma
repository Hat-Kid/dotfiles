#!/bin/sh
monitor="$1"
gamma="$2"

if [ "$1" == "1" ]; then
    xrandr --output DP-2 --gamma "$2":"$2":"$2"
elif [ "$1" == "2" ]; then
    xrandr --output DP-4 --gamma "$2":"$2":"$2"
elif [ "$1" == "all" ]; then
    xrandr --output DP-2 --gamma "$2":"$2":"$2"
    xrandr --output DP-4 --gamma "$2":"$2":"$2"
fi
